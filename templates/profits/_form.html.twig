{{ form_start(form) }}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">{{ title }}</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->

        <div class="card-body">
            <div class="form-group">
                {{ form_row(form.profit, {label: 'Enter Profit', attr: {class: 'form-control', placeholder: 'Profit'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.loss, {label: 'Enter Loss', attr: {class: 'form-control', placeholder: 'Loss'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.profit_date, {label: 'Enter Profit Date', attr: {class: 'form-control', placeholder: 'Profit Date'}}) }}
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary float-left">{{ button_label|default('Save') }}</button>
            <a href="{{ path('app_profits_index') }}" class="float-right btn btn-secondary">
                <i class="fas fa-angle-left"></i>
                Back to List
            </a>
        </div>
    </div>
{{ form_end(form) }}
