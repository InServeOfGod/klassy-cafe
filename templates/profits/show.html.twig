{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
    <div class="container">
        <div class="card card-primary mt-3">
            <div class="card-header">
                <h3 class="card-title">{{ title }}</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ profit.id }}</td>
                        </tr>
                        <tr>
                            <th>Profit</th>
                            <td>{{ profit.profit }}</td>
                        </tr>
                        <tr>
                            <th>Loss</th>
                            <td>{{ profit.loss }}</td>
                        </tr>
                        <tr>
                            <th>Profit Date</th>
                            <td>{{ profit.profitDate ? profit.profitDate|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_profits_index') }}" class="float-left btn btn-secondary">
                    <i class="fas fa-angle-left"></i>
                    Back to List
                </a>

                <div class="float-right">
                    <a href="{{ path('app_profits_edit', {'id': profit.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    {{ include('profits/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
