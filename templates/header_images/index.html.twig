{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
    <div class="card mb-5">
        <div class="card-header border-0">
            <h3 class="card-title">Header</h3>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Subtitle</th>
                    <th>Button Title</th>
                    <th>Background Photo</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for header_image in header_images %}
                    <tr>
                        <td>{{ header_image.id }}</td>
                        <td>{{ header_image.title }}</td>
                        <td>{{ header_image.subtitle }}</td>
                        <td>{{ header_image.button }}</td>
                        <td>
                            {% if header_image.bg is not null %}
                                <a href="{{ asset(header_image.bg) }}" target="_blank">
                                    <img src="{{ asset(header_image.bg) }}" alt="{{ header_image.bg }}" width="64" height="64" class="img-rounded">
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_header_images_edit', {'id': header_image.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
