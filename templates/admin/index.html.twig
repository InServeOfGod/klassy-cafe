{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="{{ asset('dist/img/AdminLTELogo.png') }}" alt="AdminLTELogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="{{ path('app_admin_index') }}" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#reservations" class="nav-link">Reservation</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-calendar"></i>
                        <span class="badge badge-danger navbar-badge">{{ contacts|length }}</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        {% for contact in contacts[0:5] %}
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <!-- Message Start -->
                                <div class="media">
                                    <div class="media-body">
                                        <h3 class="dropdown-item-title">
                                            {{ contact.name }}
                                            <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>
                                        </h3>
                                        <p class="text-sm">{{ contact.msg }}</p>
                                        <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> {{ contact.dateContact|date }}</p>
                                    </div>
                                </div>
                                <!-- Message End -->
                            </a>
                        {% endfor %}
                        <div class="dropdown-divider"></div>
                        <a href="#reservations" class="dropdown-item dropdown-footer">See All Reservations</a>
                    </div>
                </li>
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-warning navbar-badge">{{ notifications|length }}</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-item dropdown-header">{{ notifications|length }} Notifications</span>
                        {% for notification in notifications[0:5] %}
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-bell mr-2"></i> {{ notification.action }}
                                <span class="float-right text-muted text-sm">{{ notification.dateAction|date }}</span>
                            </a>
                        {% endfor %}
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        {# todo : make profile page #}
                        <a href="#profile" class="d-block">Alexander Pierce</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item menu-open">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="{{ path('app_admin_index') }}" class="nav-link active">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Dashboard</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_admin_logout') }}" class="nav-link">
                                <i class="nav-icon fa fa-door-open text-danger"></i>
                                <p>Logout</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">{{ title }}</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="{{ path('app_admin_index') }}">Home</a></li>
                                <li class="breadcrumb-item active">{{ title }}</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- Small boxes (Stat box) -->
                    <div class="row">
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3>{{ product_count }}</h3>

                                    <p>Products</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-bag"></i>
                                </div>
                                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3><sup style="font-size: 20px">$</sup>{{ profit }}</h3>

                                    <p>Profit</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-stats-bars"></i>
                                </div>
                                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3>{{ customers|length }}</h3>

                                    <p>Customers</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-person-add"></i>
                                </div>
                                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-danger">
                                <div class="inner">
                                    <h3><sup style="font-size: 20px">$</sup>{{ money }}</h3>

                                    <p>Current Money</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-pie-graph"></i>
                                </div>
                                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                    </div>
                    <div class="row">
                        {# profits table #}

                        <div class="col-lg-6 mt-3">
                            <div class="card">
                                <div class="card-header border-0">
                                    <h3 class="card-title">Profits</h3>
                                </div>
                                <div class="card-body table-responsive p-0">
                                    <table class="table table-striped table-valign-middle">
                                        <thead>
                                        <tr>
                                            <th></th>
                                            <th>Profit</th>
                                            <th>Loss</th>
                                            <th>Date</th>
                                            <th>Show</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set i = 1 %}
                                        {% for profit in profits[0:5] %}
                                            <tr>
                                                <td>{{ i }}</td>
                                                <td>
                                                    <small class="text-success mr-1">
                                                        <i class="fas fa-arrow-up"></i>
                                                        {{ profit.profit }}
                                                    </small>
                                                </td>
                                                <td>
                                                    <small class="text-danger mr-1">
                                                        <i class="fas fa-arrow-down"></i>
                                                        {{ profit.loss }}
                                                    </small>
                                                </td>
                                                <td class="text-muted">{{ profit.profitDate|date }}</td>
                                                <td>
                                                    <a href="#profit" class="link-muted">
                                                        <i class="fa fa-search"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            {% set i = i + 1 %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        {# customers table #}

                        <div class="col-lg-6 mt-3">
                            <div class="card">
                                <div class="card-header border-0">
                                    <h3 class="card-title">Customers</h3>
                                </div>
                                <div class="card-body table-responsive p-0">
                                    <table class="table table-striped table-valign-middle">
                                        <thead>
                                        <tr>
                                            <th></th>
                                            <th>Menu</th>
                                            <th>Customer Name</th>
                                            <th>Date Arrived</th>
                                            <th>Order</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set i = 1 %}
                                        {% for customer in customers[0:5] %}
                                            <tr>
                                                <td>{{ i }}</td>
                                                <td>{{ customer.offer_menu.title }}</td>
                                                <td>{{ customer.name }}</td>
                                                <td>{{ customer.date_arrived|date }}</td>
                                                <td>
                                                    {% if customer.is_canceled %}
                                                        <i class="fa fa-times text-danger"></i>
                                                    {% else %}
                                                        <i class="fa fa-check text-success"></i>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                            {% set i = i + 1 %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        {# reservation table #}

                        <div class="col-lg-6 mt-3">
                            <div class="card">
                                <div class="card-header border-0">
                                    <h3 class="card-title">Reservations</h3>
                                </div>
                                <div class="card-body table-responsive p-0">
                                    <table class="table table-striped table-valign-middle">
                                        <thead>
                                        <tr>
                                            <th></th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Reservation Date</th>
                                            <th>Message</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set i = 1 %}
                                        {% for contact in contacts[0:5] %}
                                            <tr>
                                                <td>{{ i }}</td>
                                                <td>{{ contact.name }}</td>
                                                <td>{{ contact.email }}</td>
                                                <td>{{ contact.reservationDate|date }}</td>
                                                <td>{{ contact.msg }}</td>
                                            </tr>
                                            {% set i = i + 1 %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        {# notifications table #}

                        <div class="col-lg-6 mt-3">
                            <div class="card">
                                <div class="card-header border-0">
                                    <h3 class="card-title">Notifications</h3>
                                </div>
                                <div class="card-body table-responsive p-0">
                                    <table class="table table-striped table-valign-middle">
                                        <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th>Action</th>
                                            <th>Date Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set i = 1 %}
                                        {% for notification in notifications[0:5] %}
                                            <tr>
                                                <td>{{ i }}</td>
                                                <td>
                                                    <i class="far fa-bell"></i>
                                                </td>
                                                <td>{{ notification.action }}</td>
                                                <td>{{ notification.dateAction|date }}</td>
                                            </tr>
                                            {% set i = i + 1 %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                </div><!-- /.container-fluid -->

                <footer class="mt-3 py-4 text-center">
                    <span class="text-muted">&copy; Copyright {{ date("now")|date('Y') }}. All rights reserved.</span>
                </footer>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
{% endblock %}
