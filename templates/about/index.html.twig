{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
<div class="container-fluid">
    <div class="card mb-5">
        <div class="card-header border-0">
            <h3 class="card-title">About</h3>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Video Link</th>
                    <th>Video Background</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for about in abouts %}
                <tr>
                    <td>{{ about.id }}</td>
                    <td>{{ about.title }}</td>
                    <td>
                        <a href="{{ about.videoLink }}" target="_blank" class="link-muted">{{ about.videoLink }}</a>
                    </td>
                    <td>
                        {% if about.videoBg is not null %}
                            <a href="{{ asset(about.videoBg) }}" target="_blank">
                                <img src="{{ asset(about.videoBg) }}" alt="{{ about.videoBg }}" width="64" height="64" class="img-rounded">
                            </a>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_field_about_edit', {'id': about.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
                {% else %}
                    <td colspan="5">no records found</td>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
