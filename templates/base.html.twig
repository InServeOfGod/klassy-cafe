            <!-- Daterange picker -->
{#            <link rel="stylesheet" href="{{ asset('plugins/daterangepicker/daterangepicker.css') }}">#}
            <!-- summernote -->
{#            <link rel="stylesheet" href="{{ asset('plugins/summernote/summernote-bs4.min.css') }}">#}
