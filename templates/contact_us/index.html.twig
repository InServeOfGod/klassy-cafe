{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
    <div class="container-fluid">
        <div class="card mb-5">
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ contactUs.id }}</td>
                        <td>{{ contactUs.title }}</td>
                        <td>{{ contactUs.description }}</td>
                        <td>
                            <a href="{{ path('app_contact_us_edit', {'id': contactUs.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
