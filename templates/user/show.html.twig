{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
    <div class="container">
        <div class="card card-primary mt-3">
            <div class="card-header">
                <h3 class="card-title">{{ title }}</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>*****</td>
                        </tr>
                        <tr>
                            <th>Background Photo</th>
                            <td>
                                <a href="{{ asset(user.photo) }}" target="_blank">
                                    <img src="{{ asset(user.photo) }}" alt="{{ user.photo }}" width="64" height="64" class="img-thumbnail">
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Avatar</th>
                            <td>
                                <a href="{{ asset(user.avatar) }}" target="_blank">
                                    <img src="{{ asset(user.avatar) }}" alt="{{ user.avatar }}" width="64" height="64" class="img-thumbnail">
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_settings') }}" class="float-left btn btn-secondary">
                    <i class="fas fa-angle-left"></i>
                    Back to List
                </a>

                {#<div class="float-right">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                        <i class="fa fa-edit"></i>
                    </a>
                </div>#}
            </div>
        </div>
    </div>
{% endblock %}
