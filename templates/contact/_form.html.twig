{{ form_start(form) }}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">{{ title }}</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->

    <div class="card-body">
        <div class="form-group">
            {{ form_row(form.name, {label: 'Enter Name', attr: {class: 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.email, {label: 'Enter Email', attr: {class: 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.phone_number, {label: 'Enter Phone Number', attr: {class: 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.guest, {label: 'Select Count Of Guests', attr: {class: 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.reservation_date, {label: 'Select Reservation Date', attr: {class: 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.day_time, {label: 'Select Day Time', attr: {class: 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.msg, {label: 'Enter Message', attr: {class: 'form-control'}}) }}
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary float-left">{{ button_label|default('Save') }}</button>
        <a href="{{ path('app_contact_index') }}" class="float-right btn btn-secondary">
            <i class="fas fa-angle-left"></i>
            Back to List
        </a>
    </div>
</div>
{{ form_end(form) }}

