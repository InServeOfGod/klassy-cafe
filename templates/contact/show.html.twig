{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
    <div class="container">
        <div class="card card-primary mt-3">
            <div class="card-header">
                <h3 class="card-title">{{ title }}</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ contact.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ contact.name }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ contact.email }}</td>
                    </tr>
                    <tr>
                        <th>Phone Number</th>
                        <td>{{ contact.phoneNumber }}</td>
                    </tr>
                    <tr>
                        <th>Reservation Date</th>
                        <td>{{ contact.reservationDate ? contact.reservationDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Message</th>
                        <td>{{ contact.msg }}</td>
                    </tr>
                    <tr>
                        <th>Date Contact</th>
                        <td>{{ contact.dateContact ? contact.dateContact|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_reservation_index') }}" class="float-left btn btn-secondary">
                    <i class="fas fa-angle-left"></i>
                    Back to List
                </a>

                <div class="float-right">
                    <a href="{{ path('app_reservation_edit', {'id': contact.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    {{ include('contact/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
