{% extends 'base.html.twig' %}

{% block title %}ChefsSlider index{% endblock %}

{% block body %}
    <h1>ChefsSlider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Photo</th>
                <th>Facebook</th>
                <th>Twitter</th>
                <th>Instagram</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chefs_slider in chefs_sliders %}
            <tr>
                <td>{{ chefs_slider.id }}</td>
                <td>{{ chefs_slider.title }}</td>
                <td>{{ chefs_slider.subtitle }}</td>
                <td>{{ chefs_slider.photo }}</td>
                <td>{{ chefs_slider.facebook }}</td>
                <td>{{ chefs_slider.twitter }}</td>
                <td>{{ chefs_slider.instagram }}</td>
                <td>
                    <a href="{{ path('app_chefs_slider_show', {'id': chefs_slider.id}) }}">show</a>
                    <a href="{{ path('app_chefs_slider_edit', {'id': chefs_slider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chefs_slider_new') }}">Create new</a>
{% endblock %}
