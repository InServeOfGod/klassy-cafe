{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
    <div class="container">
        <div class="card card-primary mt-3">
            <div class="card-header">
                <h3 class="card-title">{{ title }}</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ header_slider.id }}</td>
                        </tr>
                        <tr>
                            <th>Photo</th>
                            <td>
                                <a href="{{ asset(header_slider.photo) }}" target="_blank">
                                    <img src="{{ asset(header_slider.photo) }}" alt="{{ header_slider.photo }}" width="64" height="64" class="img-thumbnail">
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_header_slider_index') }}" class="float-left btn btn-secondary">
                    <i class="fas fa-angle-left"></i>
                    Back to List
                </a>

                <div class="float-right">
                    <a href="{{ path('app_header_slider_edit', {'id': header_slider.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    {{ include('header_slider/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
