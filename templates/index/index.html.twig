{% extends 'base.html.twig' %}

{% block body %}
    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="{{ path('app_index') }}" class="logo">
                            <img src="{{ asset(header_logo) }}" alt="klassy cafe html template">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section"><a href="#top" class="active">Home</a></li>
                            <li class="scroll-to-section"><a href="#about">About</a></li>
                            <li class="scroll-to-section"><a href="#menu">Menu</a></li>
                            <li class="scroll-to-section"><a href="#chefs">Chefs</a></li>
                            <li class="scroll-to-section"><a href="#reservation">Contact Us</a></li>
                            <li class="scroll-to-section"><a href="#offers">Offers</a></li>
                            <li><a href="{{ path('app_login') }}">Login</a></li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <!-- ***** Main Banner Area Start ***** -->
    <div id="top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4">
                    <div class="left-content" style="background-image: url({{ image_bg }});">
                        <div class="inner-content">
                            <h4>{{ image_title }}</h4>
                            <h6 class="text-uppercase">{{ image_subtitle }}</h6>
                            <div class="main-white-button scroll-to-section">
                                <a href="#reservation">{{ image_button }}</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="main-banner header-text">
                        <div class="Modern-Slider">
                            {% for slide in header_slides %}
                                <div class="item">
                                    <div class="img-fill">
                                        <img src="{{ asset(slide.Photo) }}" alt="">
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->

    <!-- ***** About Area Starts ***** -->
    <section class="section" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="left-text-content">
                        <div class="section-heading">
                            <h6>About Us</h6>
                            <h2>{{ about_title }}</h2>
                        </div>
                        <div class="row">
                            {% for about_photo in about_photos %}
                                <div class="col-4 mt-3">
                                    <img src="{{ asset(about_photo.photo) }}" alt="">
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="right-content">
                        <div class="thumb">
                            <a rel="nofollow" href="{{ about_video_link }}"><i class="fa fa-play"></i></a>
                            <img src="{{ asset(about_video_bg) }}" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** About Area Ends ***** -->

    <!-- ***** Menu Area Starts ***** -->
    <section class="section" id="menu">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="section-heading">
                        <h6>Our Menu</h6>
                        <h2>{{ menu_title }}</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="menu-item-carousel">
            <div class="col-lg-12">
                <div class="owl-menu-item owl-carousel">
                    {% for menu_slider in menu_sliders %}
                        <div class="item">
                            <div class='card' style="background-image: url('{{ asset(menu_slider.photo) }}')">
                                <div class="price"><h6>${{ menu_slider.price }}</h6></div>
                                <div class='info'>
                                    <h1 class='title'>{{ menu_slider.title }}</h1>
                                    <p class='description'>{{ menu_slider.description }}</p>
                                    <div class="main-text-button">
                                        <div class="scroll-to-section"><a href="#reservation">Make Reservation <i class="fa fa-angle-down"></i></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Menu Area Ends ***** -->

    <!-- ***** Chefs Area Starts ***** -->
    <section class="section" id="chefs">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 offset-lg-4 text-center">
                    <div class="section-heading">
                        <h6>Our Chefs</h6>
                        <h2>{{ chef_title }}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for chef in chefs %}
                    <div class="col-lg-4">
                        <div class="chef-item">
                            <div class="thumb">
                                <div class="overlay"></div>
                                <ul class="social-icons">
                                    <li><a href="{{ chef.facebook }}"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="{{ chef.twitter }}"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="{{ chef.instagram }}"><i class="fa fa-instagram"></i></a></li>
                                </ul>
                                <img src="{{ asset(chef.photo) }}" alt="Chef #1">
                            </div>
                            <div class="down-content">
                                <h4>{{ chef.title }}</h4>
                                <span>{{ chef.subtitle }}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- ***** Chefs Area Ends ***** -->

    <!-- ***** Reservation Us Area Starts ***** -->
    <section class="section" id="reservation">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 align-self-center">
                    <div class="left-text-content">
                        <div class="section-heading">
                            <h6>Contact Us</h6>
                            <h2>{{ contact_us.title }}</h2>
                        </div>
                        <p>{{ contact_us.description }}</p>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="phone">
                                    <i class="fa fa-phone"></i>
                                    <h4>Phone Numbers</h4>
                                    <span>
                                        {% for phone in phone_numbers %}
                                            <a href="tel:{{ phone.phoneNumber }}">{{ phone.phoneNumber }}</a><br>
                                        {% endfor %}
                                    </span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="message">
                                    <i class="fa fa-envelope"></i>
                                    <h4>Emails</h4>
                                    <span>
                                        {% for mail in emails %}
                                            <a href="mailto:{{ mail.email }}">{{ mail.email }}</a><br>
                                        {% endfor %}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="contact-form">
                        {{ form_start(contactForm, {attr: {class: "contact-form", id: 'contact'}}) }}
                            <div class="row align-items-end">
                                <div class="col-lg-12">
                                    <h4>Table Reservation</h4>
                                </div>
                                <div class="col-lg-6 col-sm-12">
                                    <fieldset>
                                        <small class="text-danger">{{ form_errors(contactForm.name) }}</small>
                                        {{ form_widget(contactForm.name) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-6 col-sm-12">
                                    <fieldset>
                                        <small class="text-danger">{{ form_errors(contactForm.email) }}</small>
                                        {{ form_widget(contactForm.email) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-6 col-sm-12">
                                    <fieldset>
                                        <small class="text-danger">{{ form_errors(contactForm.phone_number) }}</small>
                                        {{ form_widget(contactForm.phone_number) }}
                                    </fieldset>
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <fieldset>
                                        <small class="text-danger">{{ form_errors(contactForm.guest) }}</small>
                                        {{ form_widget(contactForm.guest) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-6">
                                    <small class="text-danger">{{ form_errors(contactForm.reservation_date) }}</small>
                                    {{ form_widget(contactForm.reservation_date) }}
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <fieldset>
                                        <small class="text-danger">{{ form_errors(contactForm.day_time) }}</small>
                                        {{ form_widget(contactForm.day_time) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <fieldset>
                                        <small class="text-danger">{{ form_errors(contactForm.msg) }}</small>
                                        {{ form_widget(contactForm.msg) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="main-button-icon">Make A Reservation</button>
                                    </fieldset>
                                </div>
                            </div>
                        {{ form_end(contactForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Reservation Area Ends ***** -->

    <!-- ***** Menu Area Starts ***** -->
    <section class="section" id="offers">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 offset-lg-4 text-center">
                    <div class="section-heading">
                        <h6>Klassy Week</h6>
                        <h2>{{ offer_title }}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="row" id="tabs">
                        <div class="col-lg-12">
                            <div class="heading-tabs">
                                <div class="row">
                                    <div class="col-lg-6 offset-lg-3">
                                        <ul>
                                            {% for i in (0..dayTimes|length - 1) %}
                                                <li><a href='#tabs-{{ i }}'><img src="{{ asset(dayTimes[i].photo) }}" alt="">{{ dayTimes[i].dayTime }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <section class='tabs-content'>
                                {% for i in (0..dayTimes|length - 1) %}
                                    <article id='tabs-{{ i }}'>
                                        <div class="row">
                                            {% for offer in offers[i] %}
                                                <div class="col-md-6">
                                                    <div class="tab-item">
                                                        <img src="{{ asset(offer.photo) }}" alt="">
                                                        <h4>{{ offer.title }}</h4>
                                                        <p>{{ offer.subtitle }}</p>
                                                        <div class="price">
                                                            <h6>${{ offer.price }}</h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </article>
                                {% endfor %}
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Chefs Area Ends ***** -->

    <!-- ***** Footer Start ***** -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-xs-12">
                    <div class="right-text-content">
                        <ul class="social-icons">
                            <li><a href="{{ facebook }}"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="{{ twitter }}"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="{{ linkedin }}"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="{{ instagram }}"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="logo">
                        <a href="{{ path('app_index') }}"><img src="{{ asset(footer_logo) }}" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-4 col-xs-12">
                    <div class="left-text-content">
                        <p>&copy; Copyright {{ copyright }}</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="{{ asset('assets/js/jquery-2.1.0.min.js') }}"></script>

    <!-- Bootstrap -->
    <script src="{{ asset('assets/js/popper.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>

    <!-- Plugins -->
    <script src="{{ asset('assets/js/owl-carousel.js') }}"></script>
    <script src="{{ asset('assets/js/accordions.js') }}"></script>
    <script src="{{ asset('assets/js/datepicker.js') }}"></script>
    <script src="{{ asset('assets/js/scrollreveal.min.js') }}"></script>
    <script src="{{ asset('assets/js/waypoints.min.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.counterup.min.js') }}"></script>
    <script src="{{ asset('assets/js/imgfix.min.js') }}"></script>
    <script src="{{ asset('assets/js/slick.js') }}"></script>
    <script src="{{ asset('assets/js/lightbox.js') }}"></script>
    <script src="{{ asset('assets/js/isotope.js') }}"></script>

    <!-- Global Init -->
    <script src="{{ asset('assets/js/custom.js') }}"></script>
    <script>
        $(function() {
            var selectedClass = "";
            $("p").click(function(){
                selectedClass = $(this).attr("data-rel");
                $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("."+selectedClass).fadeOut();
                setTimeout(function() {
                    $("."+selectedClass).fadeIn();
                    $("#portfolio").fadeTo(50, 1);
                }, 500);
            });
        });
    </script>
{% endblock %}
