{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
    <div class="container">
        <div class="card card-primary mt-3">
            <div class="card-header">
                <h3 class="card-title">{{ title }}</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ about_photo.id }}</td>
                    </tr>
                    <tr>
                        <th>Photo</th>
                        <td>
                            <a href="{{ asset(about_photo.photo) }}" target="_blank">
                                <img src="{{ asset(about_photo.photo) }}" alt="{{ about_photo.photo }}" width="64" height="64" class="img-thumbnail">
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_about_photos_index') }}" class="float-left btn btn-secondary">
                    <i class="fas fa-angle-left"></i>
                    Back to List
                </a>

                <div class="float-right">
                    <a href="{{ path('app_about_photos_edit', {'id': about_photo.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    {{ include('about_photos/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

