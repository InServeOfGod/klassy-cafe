{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('assets/css/jquery.dataTables.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/semantic.min.css') }}">
{% endblock %}

{% block admin_body %}
<div class="container-fluid">
    <div class="card mb-5">
        <div class="card-header border-0">
            <h3 class="card-title">About</h3>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Video Link</th>
                    <th>Video Background</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ about.id }}</td>
                    <td>{{ about.title }}</td>
                    <td>
                        <a href="{{ about.videoLink }}" target="_blank" class="link-muted">{{ about.videoLink }}</a>
                    </td>
                    <td>
                        {% if about.videoBg is not null %}
                            <a href="{{ asset(about.videoBg) }}" target="_blank">
                                <img src="{{ asset(about.videoBg) }}" alt="{{ about.videoBg }}" width="64" height="64" class="img-rounded">
                            </a>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_about_edit', {'id': about.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover display ui celled w-100" id="datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for about_photo in about_photos %}
                    <tr>
                        <td>{{ about_photo.id }}</td>
                        <td>
                            {% if about_photo.photo is not null %}
                                <a href="{{ asset(about_photo.photo) }}" target="_blank">
                                    <img src="{{ asset(about_photo.photo) }}" alt="{{ about_photo.photo }}" width="64" height="64" class="img-rounded">
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_about_photos_show', {'id': about_photo.id}) }}" class="text-primary" data-toggle="tooltip" data-placement="top" title="show">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="{{ path('app_about_photos_edit', {'id': about_photo.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                                <i class="fa fa-edit"></i>
                            </a>
                            {{ include("about_photos/_delete_form.html.twig") }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a href="{{ path('app_about_photos_new') }}" class="btn btn-sm btn-outline-primary">
                <i class="fa fa-plus"></i>
                Add New Photo
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/js/jquery-3.5.1.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/js/dataTables.semanticui.min.js') }}"></script>
    <script src="{{ asset('assets/js/semantic.min.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}

