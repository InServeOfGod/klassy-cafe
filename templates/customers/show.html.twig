{% extends 'base.html.twig' %}

{% block title %} | {{ title }}{% endblock %}

{% block admin_body %}
    <div class="container">
        <div class="card card-primary mt-3">
            <div class="card-header">
                <h3 class="card-title">{{ title }}</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ customer.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ customer.name }}</td>
                        </tr>
                        <tr>
                            <th>Date Arrived</th>
                            <td>{{ customer.dateArrived ? customer.dateArrived|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Is Canceled</th>
                            <td>{{ customer.isCanceled ? 'Yes' : 'No' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_customers_index') }}" class="float-left btn btn-secondary">
                    <i class="fas fa-angle-left"></i>
                    Back to List
                </a>

                <div class="float-right">
                    <a href="{{ path('app_customers_edit', {'id': customer.id}) }}" class="text-secondary" data-toggle="tooltip" data-placement="top" title="edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    {{ include('customers/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
